<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape"
            android:padding="3dp"
            android:id="@+id/image_view_capture_thumb"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="4dp"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="#333"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingTop="5dp"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/text_view_capture_name"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="2"
                />

            <TextView
                android:text="Not executed yet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_runned_on"
                android:textSize="16sp"
                android:textColor="#333"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_capture_date"
                android:textAlignment="textEnd"
                android:textColor="#333"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete_capture_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@android:drawable/ic_delete"
            android:background="@color/color_icons"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>